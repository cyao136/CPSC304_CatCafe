<style>
.room {
text-align: center;
margin-bottom: 5%;
background: url(https://res.cloudinary.com/sagacity/image/upload/c_crop,h_2832,w_4256,x_0,y_0/c_limit,f_auto,fl_lossy,q_80,w_1080/shutterstock_379730806_xrxkx5.jpg) no-repeat center center fixed;
background-size: cover;
background: contain;
width: 100%;
height: 80vh;

}
h2{
font-family: 'Pacifico', cursive;
margin-top: 10%;
margin-bottom: 5%;
color: #fff;
}
</style>
<div class="container room">
<h2>Book a room!</h2>
	<%= form_tag(controller: "member", action: "book_submit", method: "post", class: "form-group") do %>
		<%= date_field(:booking, :day) %>
		<%= time_field(:booking, :start) %>
		<%= time_field(:booking, :end ) %>
		<%= select_tag(:room_id, options_for_select(@available_rooms)) %>

		<%= submit_tag("Book") %>
	<% end %>
</div>


