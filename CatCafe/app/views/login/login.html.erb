<div class="container back">
	<div class="row">
	<div class="col-sm-4"></div>
	<div class="col-sm-4">
			<h2>Login</h2>
			<%= form_tag(controller: "login",  action: "login_submit", method: "post", class: "form-group") do %>
				<div class="col-sm-12">
					<%= email_field(:user, :email, placeholder:'Email', class: "form-control") %>
				<br>
				</div>
				<div class="col-sm-12">
					<%= password_field(:user, :password, placeholder:'Password', class: "form-control") %>
				<br>
				</div>

				<%= submit_tag("Login", class: "btn btn-default") %>
			<% end %>
			<br>
			<br>
			<h2>Employee Login</h2>
			<%= form_tag(controller: "login",  action: "employee_login_submit", method: "post", class: "form-group") do %>
				<div class="col-sm-12">
					<%= number_field(:employee, :id, placeholder:'Employee ID', class: "form-control") %>
				<br>
				</div>
				<div class="col-sm-12">
					<%= password_field(:employee, :password, placeholder:'Password', class: "form-control") %>
				<br>
				</div>

				<%= submit_tag("Login", class: "btn btn-default") %>
			<% end %>
	</div>
	<div class="col-sm-4"></div>
	</div>
</div>
